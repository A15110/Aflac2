---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Mark Mikko - Aflac Insurance Agent | Redding, CA">
	<main>
		<section class="hero">
			<div class="hero-content">
				<h1>Your Trusted Aflac Insurance Agent in Redding</h1>
				<p class="hero-subtitle">Protecting What Matters Most with Supplemental Insurance Solutions</p>
				<div class="hero-cta">
					<a href="/contact" class="cta-button primary">Get a Free Quote</a>
					<a href="/plans" class="cta-button secondary">Explore Plans</a>
				</div>
			</div>
		</section>

		<section class="benefits">
			<h2>Why Choose Aflac with Mark Mikko?</h2>
			<div class="benefits-grid">
				<Card
					href="/plans"
					title="Fast Claims Processing"
					body="Most claims are processed in just 1-2 business days when submitted online."
				/>
				<Card
					href="/plans"
					title="Personal Service"
					body="Direct access to your local agent for personalized insurance guidance."
				/>
				<Card
					href="/plans"
					title="Flexible Coverage"
					body="Customizable plans that fit your needs and budget."
				/>
				<Card
					href="/plans"
					title="Peace of Mind"
					body="Over 65 years of experience helping people protect their financial future."
				/>
			</div>
		</section>

		<section class="featured-plans">
			<h2>Popular Insurance Plans</h2>
			<div class="plans-grid">
				<div class="plan-card">
					<h3>Accident Insurance</h3>
					<p>Protection for life's unexpected moments.</p>
					<a href="/plans/accident" class="learn-more">Learn More →</a>
				</div>
				<div class="plan-card">
					<h3>Cancer Insurance</h3>
					<p>Additional support when you need it most.</p>
					<a href="/plans/cancer" class="learn-more">Learn More →</a>
				</div>
				<div class="plan-card">
					<h3>Short-Term Disability</h3>
					<p>Income protection for peace of mind.</p>
					<a href="/plans/disability" class="learn-more">Learn More →</a>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		color: var(--text-dark);
	}
	.hero {
		background: linear-gradient(rgba(0, 93, 170, 0.9), rgba(0, 93, 170, 0.9)), url('/hero-bg.jpg');
		background-size: cover;
		background-position: center;
		color: white;
		padding: 4rem 1rem;
		text-align: center;
	}
	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		margin: 0 0 1rem;
	}
	.hero-subtitle {
		font-size: 1.25rem;
		margin-bottom: 2rem;
	}
	.hero-cta {
		display: flex;
		gap: 1rem;
		justify-content: center;
	}
	.cta-button.primary {
		background: var(--aflac-yellow);
		color: var(--text-dark);
	}
	.cta-button.secondary {
		background: transparent;
		border: 2px solid white;
	}
	.benefits, .featured-plans {
		padding: 4rem 1rem;
		max-width: 1200px;
		margin: 0 auto;
	}
	h2 {
		text-align: center;
		margin-bottom: 3rem;
		color: var(--aflac-blue);
	}
	.benefits-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}
	.plans-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}
	.plan-card {
		background: var(--background-light);
		padding: 2rem;
		border-radius: 8px;
		text-align: center;
	}
	.plan-card h3 {
		color: var(--aflac-blue);
		margin: 0 0 1rem;
	}
	.learn-more {
		display: inline-block;
		margin-top: 1rem;
		color: var(--aflac-blue);
		text-decoration: none;
		font-weight: 600;
	}
	@media (max-width: 768px) {
		h1 {
			font-size: 2rem;
		}
		.hero-cta {
			flex-direction: column;
		}
		.benefits, .featured-plans {
			padding: 2rem 1rem;
		}
	}