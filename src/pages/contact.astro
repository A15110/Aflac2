---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Contact - Mark Mikko Aflac Agent | Redding, CA">
  <main class="contact-page">
    <section class="hero">
      <div class="container">
        <h1>Contact Us</h1>
        <p class="subtitle">Get in touch for personalized insurance guidance</p>
      </div>
    </section>

    <section class="content">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-form-container">
            <h2>Send a Message</h2>
            <form class="contact-form" id="contact-form">
              <div class="form-group">
                <label for="name">Full Name *</label>
                <input type="text" id="name" name="name" required>
              </div>

              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required>
              </div>

              <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone">
              </div>

              <div class="form-group">
                <label for="subject">Subject *</label>
                <select id="subject" name="subject" required>
                  <option value="">Select a subject</option>
                  <option value="quote">Request a Quote</option>
                  <option value="consultation">Schedule Consultation</option>
                  <option value="claim">Claims Assistance</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div class="form-group">
                <label for="message">Message *</label>
                <textarea id="message" name="message" rows="5" required></textarea>
              </div>

              <button type="submit" class="submit-button">Send Message</button>
            </form>
          </div>

          <div class="contact-info">
            <div class="info-card">
              <h3>Contact Information</h3>
              <address>
                <p><strong>Office Address:</strong><br>
                1415 Victor Av.<br>
                Suite 8<br>
                Redding, CA 96003</p>
                
                <p><strong>Phone & Fax:</strong><br>
                Cell: <a href="tel:5309457035">530.945.7035</a><br>
                Fax: 530.215.3141</p>
                
                <p><strong>Email:</strong><br>
                <a href="mailto:mark_mikko@us.aflac.com">mark_mikko@us.aflac.com</a></p>
                
                <p><strong>License Information:</strong><br>
                CA Insurance License #0809825</p>
              </address>
            </div>

            <div class="info-card">
              <h3>Business Hours</h3>
              <ul class="hours-list">
                <li><span>Monday - Friday:</span> 9:00 AM - 5:00 PM</li>
                <li><span>Saturday:</span> By Appointment</li>
                <li><span>Sunday:</span> Closed</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .contact-page {
    color: var(--text-dark);
  }

  .hero {
    background: linear-gradient(rgba(0, 93, 170, 0.9), rgba(0, 93, 170, 0.9)), url('/hero-bg.jpg');
    background-size: cover;
    background-position: center;
    color: white;
    padding: 4rem 1rem;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  h1 {
    font-size: 3rem;
    margin: 0;
    font-weight: 700;
  }

  .subtitle {
    font-size: 1.25rem;
    margin: 1rem 0 0;
    opacity: 0.9;
  }

  .content {
    padding: 4rem 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 4rem;
    align-items: start;
  }

  .contact-form-container h2 {
    color: var(--aflac-blue);
    margin: 0 0 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  input,
  select,
  textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: inherit;
    font-size: 1rem;
    transition: border-color 0.2s ease;
  }

  input:focus,
  select:focus,
  textarea:focus {
    outline: none;
    border-color: var(--aflac-blue);
  }

  .submit-button {
    background: var(--aflac-blue);
    color: white;
    padding: 0.85rem 1.75rem;
    border: 2px solid var(--aflac-blue);
    border-radius: 6px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s ease;
    width: 100%;
  }

  .submit-button:hover {
    background: white;
    color: var(--aflac-blue);
     transform: translateY(-2px);
    box-shadow: 0 4px 6px rgba(0, 93, 170, 0.1);
  }

  .info-card {
    background: var(--background-light);
    padding: 2rem;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .info-card h3 {
    color: var(--aflac-blue);
    margin: 0 0 1.5rem;
  }

  .info-card address {
    font-style: normal;
    line-height: 1.6;
  }

  .info-card p {
    margin: 0 0 1.5rem;
  }

  .info-card a {
    color: var(--aflac-blue);
    text-decoration: none;
  }

  .info-card a:hover {
    text-decoration: underline;
  }

  .hours-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .hours-list li {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .hours-list li:last-child {
    border-bottom: none;
  }

  @media (max-width: 1024px) {
    .contact-grid {
      gap: 3rem;
    }
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    .content {
      padding: 3rem 0;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 2rem;
    }

    .hero {
      padding: 3rem 1rem;
    }

    .content {
      padding: 2rem 0;
    }

    .info-card {
      padding: 1.5rem;
    }
  }
</style>

<script>
  const form = document.getElementById('contact-form');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Here you would typically handle the form submission
    // For now, we'll just show an alert
    alert('Thank you for your message. We will get back to you soon!');
    form.reset();
  });
</script>